<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="5dp">

    <LinearLayout
        android:id="@+id/mark_item_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#90ce7b">

        <TextView
            android:id="@+id/mark_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginLeft="10dp"
            android:gravity="right"
            android:text="20 apr"
            android:textColor="@color/white"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/mark_note"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginLeft="25dp"
            android:gravity="left|center"
            android:text="Лаб.роб №1"
            android:textColor="@color/white"
            android:textSize="16dp" />
        <TextView
            android:id="@+id/mark_mark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:layout_gravity="right"
            android:layout_marginRight="25dp"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:text="9.0"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/mark_item_linear_layout">

    </LinearLayout>

</RelativeLayout>